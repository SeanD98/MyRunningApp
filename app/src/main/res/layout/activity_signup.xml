<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Activities.SignUpActivity">

    <EditText
        android:id="@+id/txt_pass_confirm"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginBottom="72dp"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/bttn_signup"
        app:layout_constraintEnd_toEndOf="@+id/txt_pass_sign_up"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_pass_sign_up"
        app:layout_constraintTop_toTopOf="@+id/logo_signup"
        app:layout_constraintVertical_bias="0.953" />

    <EditText
        android:id="@+id/txt_email_signup"
        android:layout_width="389dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_sign_up_screen"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/txt_pass_sign_up"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/txt_pass_confirm"
        app:layout_constraintEnd_toEndOf="@+id/txt_email_signup"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_email_signup"
        app:layout_constraintTop_toBottomOf="@+id/txt_email_signup"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/bttn_signup"
        android:layout_width="338dp"
        android:layout_height="56dp"
        android:layout_marginBottom="60dp"
        android:alpha="0.8"
        android:background="@drawable/rounded_button"
        android:text="Sign-Up!"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_pass_confirm"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="@+id/txt_pass_confirm" />

    <TextView
        android:id="@+id/txt_signup"
        android:layout_width="330dp"
        android:layout_height="62dp"
        android:layout_marginTop="212dp"
        android:text="Welcome!"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#E48275"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/log_in_bttn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Log In!"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#D4647A"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/bttn_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="@+id/txt_pass_confirm"
        app:layout_constraintTop_toBottomOf="@+id/txt_pass_confirm"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:id="@+id/txt_sign_up_screen"
        android:layout_width="384dp"
        android:layout_height="40dp"
        android:text="Enter your email address and create a password to continue..."
        android:textColor="#DB7277"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txt_signup"
        app:layout_constraintTop_toBottomOf="@+id/txt_signup" />

    <ImageView
        android:id="@+id/logo_signup"
        android:layout_width="154dp"
        android:layout_height="161dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/thumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="35dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>